doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        //- link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
        link(rel="stylesheet", href="/public/css/styles.css")
    body
        header
            h1 Noom
        main
            div#welcome 
                form
                    input(placeholder="room name", required, type="text")
                    button Create  
                form#nickname
                    input(placeholder="nickname", required, type="text")
                    button Change
            div#pannel
                span#pannel_room
                span#pannel_nickname
            div#call
                div#myStream
                    div
                        video#myFace(autoplay, playsinline, width="400", height="350")
                        div#myFace-control
                            div#myFace-btn
                                button#mute 
                                    i.fas.fa-volume-up
                                button#camera 
                                    i.fa-solid.fa-video-slash
                            select#cameras
                    div
                        video#peerFace(autoplay, playsinline, width="400", height="350")
            div#data 
                ul
                form 
                    input(placeholder="write a message", required, type="text")
                    button send 


        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")