doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="stylesheet", href="/public/css/styles.css")
    body
        header
            h1 Noom
        main
            div#pre-room
                div#welcome
                    form#create
                        input#create-room(type="text" placeholder="room name" required)
                        input#create-nickname(type="text" placeholder="nick name" required)
                        button Create
                div#change
                    form#change-room
                        select
                    form#change-nickname
                        input(type="text" placeholder="nickname" required)
                        button Change
            div#display 
                span#display-room Room
                span#display-nickname Nickname  
                
            div#room
                ul
                form#msg
                    input(type="text" placeholder="message" required)
                    button Send
        script(src="/socket.io/socket.io.js") 
        script(src="/public/app.js") 